
@{
    ViewBag.Title = "Status";
}




<div class="container">

    <h2>Verificarea statului cererii</h2>
    <hr />

    @using (Html.BeginForm("Status", "PriorAppointment", FormMethod.Post))
    {

        <div class="row">
            <div class="col-sm-9">

                <div class="row">
                    <label class="col-sm-3">Numarul cererii:</label>
                    <div class="col-sm-9">
                        @Html.TextBox("RequestNumber", "", new { @class = "form-control", placeholder = "Numarul cererii" })
                    </div>
                </div>

                <br />
                <div class="row">
                    <div class="col-sm-9">
                        <button type="submit" class="btn btn-primary">Verifica</button>
                    </div>

                </div>

                <br />
                <div class="row">
                    <div class="col-sm-10">
                        <p>Result: </p>
                    </div>
                </div>
            </div>

           
        </div>
    }
</div>





